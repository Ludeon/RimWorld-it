  <!-- EN: participated in raid -->
  <ParticipatedInRaid_Required.stages.participated_in_raid.label>partecipato al raid</ParticipatedInRaid_Required.stages.participated_in_raid.label>
  <!-- EN: I participated in a raid! Now they'll all know me! -->
  <ParticipatedInRaid_Required.stages.participated_in_raid.description>Ho partecipato ad un raid! Adesso mi conosceranno tutti!</ParticipatedInRaid_Required.stages.participated_in_raid.description>
  
